<Window x:Class="PhMS.Medicine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhMS"
        mc:Ignorable="d"
        Title="Medicine" Height="693" Width="1166">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="369*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF4D3FD0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Medicine Name           :" HorizontalAlignment="Left" Margin="28,107,0,0" VerticalAlignment="Top" Width="237" Height="44" FontSize="20" FontWeight="Bold" Foreground="White"/>
        <Label Content="Group Name                :" HorizontalAlignment="Left" Margin="28,156,0,0" VerticalAlignment="Top" Width="237" Height="44" FontSize="20" FontWeight="Bold" Foreground="White"/>
        <Label HorizontalAlignment="Left" Margin="28,200,0,0" VerticalAlignment="Top" Width="172" Height="44" FontSize="20" FontWeight="Bold" Foreground="White"/>
        <Label Content="Company Name           :" HorizontalAlignment="Left" Margin="28,200,0,0" VerticalAlignment="Top" Width="237" Height="44" FontSize="20" FontWeight="Bold" Foreground="White"/>
        <Label Content="Exp Date                       :" HorizontalAlignment="Left" Margin="28,254,0,0" VerticalAlignment="Top" Width="237" Height="44" FontSize="20" FontWeight="Bold" Foreground="White"/>
        <Label Content="Purchase Price              :   " HorizontalAlignment="Left" Margin="28,298,0,0" VerticalAlignment="Top" Width="237" Height="44" FontSize="20" FontWeight="Bold" Foreground="White"/>
        <Label Content="Storage Advice             :" HorizontalAlignment="Left" Margin="28,391,0,0" VerticalAlignment="Top" Width="237" Height="44" FontSize="20" FontWeight="Bold" Foreground="White"/>
        <Label Content="Sale Price                      :" HorizontalAlignment="Left" Margin="28,342,0,0" VerticalAlignment="Top" Width="237" Height="44" FontSize="20" FontWeight="Bold" Foreground="White"/>
        <Label Content="Medicine ID                 :" HorizontalAlignment="Left" Margin="28,63,0,0" VerticalAlignment="Top" Width="237" Height="44" FontSize="20" FontWeight="Bold" Foreground="White" RenderTransformOrigin="0.44,-0.326"/>
        <Label Content="Manufacturer Country :" HorizontalAlignment="Left" Margin="28,435,0,0" VerticalAlignment="Top" Width="237" Height="44" FontSize="20" FontWeight="Bold" Foreground="White"/>
        <TextBox x:Name="txt_name" HorizontalAlignment="Left" Height="31" Margin="265,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="311" Background="#FF2E6DC9" Foreground="#FFF3F3F3" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="txt_gname" HorizontalAlignment="Left" Height="31" Margin="265,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="311" Background="#FF2E6DC9" Foreground="#FFF3F3F3" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="txt_cname" HorizontalAlignment="Left" Height="31" Margin="265,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="311" Background="#FF2E6DC9" Foreground="#FFF3F3F3" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="txt_ppeice" HorizontalAlignment="Left" Height="31" Margin="265,303,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="311" Background="#FF2E6DC9" Foreground="#FFF3F3F3" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="txt_mcountry" HorizontalAlignment="Left" Height="31" Margin="265,440,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="311" Background="#FF2E6DC9" Foreground="#FFF3F3F3" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="txt_sprice" HorizontalAlignment="Left" Height="31" Margin="265,347,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="311" Background="#FF2E6DC9" Foreground="#FFF3F3F3" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="txt_id" HorizontalAlignment="Left" Height="31" Margin="265,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="311" Background="#FF2E6DC9" Foreground="#FFF3F3F3" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="txt_sadvice" HorizontalAlignment="Left" Height="31" Margin="265,391,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="311" Background="#FF2E6DC9" Foreground="#FFF3F3F3" FontSize="20" FontWeight="Bold"/>
        <DatePicker x:Name="date" HorizontalAlignment="Left" Margin="265,258,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Background="#FF231D60" Foreground="#FFE6593D"/>
        <Button x:Name="save_btn" Content="Save" HorizontalAlignment="Left" Margin="265,593,0,0" VerticalAlignment="Top" Width="98" Height="44" FontSize="20" FontFamily="Sitka Display" FontWeight="Bold" Foreground="#FFFBFAFA" TabIndex="12" Click="btn_save">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF5B2CCC" Offset="0"/>
                    <GradientStop Color="#FF00A6E4" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="Supplier Name              :" HorizontalAlignment="Left" Margin="28,484,0,0" VerticalAlignment="Top" Width="237" Height="44" FontSize="20" FontWeight="Bold" Foreground="White"/>
        <Label Content="Mobile Number            :" HorizontalAlignment="Left" Margin="28,533,0,0" VerticalAlignment="Top" Width="237" Height="44" FontSize="20" FontWeight="Bold" Foreground="White"/>
        <TextBox x:Name="txt_sname" HorizontalAlignment="Left" Height="31" Margin="265,484,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="311" Background="#FF2E6DC9" Foreground="#FFF3F3F3" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="txt_mnumber" HorizontalAlignment="Left" Height="31" Margin="265,533,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="311" Background="#FF2E6DC9" Foreground="#FFF3F3F3" FontSize="20" FontWeight="Bold"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="368,593,0,0" VerticalAlignment="Top" Width="83" Height="44" FontSize="20" FontFamily="Sitka Display" FontWeight="Bold" Foreground="#FFFBFAFA" RenderTransformOrigin="2.044,0.727" Click="btn_src">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF5B2CCC" Offset="0"/>
                    <GradientStop Color="#FF00A6E4" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBlock x:Name="txt_details" HorizontalAlignment="Left" Margin="692,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="564" Width="407" Foreground="#FFF9F9F9" FontSize="18" Background="#FFCFA1A1"/>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="547,593,0,0" VerticalAlignment="Top" Width="126" Height="44" Foreground="#FFEAEDF6" FontSize="20" FontWeight="Bold" RenderTransformOrigin="0.839,0.671" Click="cv">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF3F52D4" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Homepage" HorizontalAlignment="Left" Margin="692,8,0,0" VerticalAlignment="Top" Width="106" Height="44" Foreground="#FFFF0057" FontSize="18" FontWeight="Bold" Click="hpg" RenderTransformOrigin="6.373,-10.408">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        <Button Content="Dashboard" HorizontalAlignment="Left" Margin="832,8,0,0" VerticalAlignment="Top" Width="106" Height="44" Foreground="#FFFF0057" FontSize="18" FontWeight="Bold" Click="gdf" RenderTransformOrigin="6.373,-10.408">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="456,593,0,0" VerticalAlignment="Top" Width="78" Height="44" FontSize="20" FontFamily="Sitka Display" FontWeight="Bold" Foreground="#FFFBFAFA" RenderTransformOrigin="2.044,0.727" Click="delete">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF5B2CCC" Offset="0"/>
                    <GradientStop Color="#FF00A6E4" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
