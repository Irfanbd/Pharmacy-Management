        xmlns:local="clr-namespace:PhMS"
        mc:Ignorable="d"
        Title="MainWindow" Height="464.491" Width="843.081" WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="Image/6vtd3q.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Image/triangles-pixabay.png"/>
        </Grid.Background>
        <Label Content="Pharmacy Management System" HorizontalAlignment="Left" Margin="36,82,0,0" VerticalAlignment="Top" Width="745" RenderTransformOrigin="0.555,0.148" FontSize="48" FontWeight="Bold" Foreground="#FF002E38" Height="85">
            <Label.Background>
                <ImageBrush/>
            </Label.Background>
        </Label>
        <Button x:Name="admin_b" Content="Admin" HorizontalAlignment="Left" Margin="59,167,0,0" VerticalAlignment="Top" Width="308" Height="150" FontSize="36" FontFamily="Sitka Display" FontWeight="Bold" Foreground="#FFFF1A0B" Click="admin_btn">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        <Button x:Name="staff_btn" Content="Staff" HorizontalAlignment="Left" Margin="438,167,0,0" VerticalAlignment="Top" Width="308" Height="150" FontSize="36" FontFamily="Sitka Display" FontWeight="Bold" Foreground="#FFFF1A0B" Click="Staff_btn_Click">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        <Button x:Name="exit_btn" Content="" HorizontalAlignment="Left" Margin="735,375,0,0" VerticalAlignment="Top" Width="46" Height="35" OpacityMask="#FF4F0000" Click="wxit_btn">
